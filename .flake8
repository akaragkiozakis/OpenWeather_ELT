[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501
exclude = 
    .git,
    __pycache__,
    great_expectations/uncommitted/,
    .venv,
    venv,
    *.egg-info
per-file-ignores =
    # Imported but unused in __init__.py files
    __init__.py:F401,
    # Databricks files - ignore undefined names (spark, dbutils, display)
    databricks/*.py:F821,
    # Quality checks in databricks also use databricks-specific imports
    databricks/quality_checks/*.py:F821,
    # Weather ingest needs to modify path before importing config
    src/ingestion/weather_ingest.py:E402